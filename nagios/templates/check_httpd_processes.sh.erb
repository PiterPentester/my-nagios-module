#!/usr/bin/env bash

### Check how many are httpd processes
p=$(expr $(ps aux | grep httpd | wc -l))

if [ $p -gt 1 ]; then
  echo "OK - there are $p apache processes"
  exit 0

elif [ $p -eq 0 ]; then
  echo "CRITICAL - there are no apache processes"
  exit 2
else
  echo "WARNING - there are only $p apache processes"
  exit 1
fi
